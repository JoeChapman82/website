            <div class="capitalism-landing-title-wrapper">
                <h1 class="capitalism-main-title">Capitalism</h1>
            </div>
            <div class="capitalism-landing-start-wrapper">
                <div id="capitalismLoadingMessage" class="capitalism-loading-message">
                    <h2 class="capitalism-start-message">Now loading...</h2>
                </div>
                <div id="capitalismLoadingWrapper" class="capitalism-start-game-wrapper capitalism-is-loading">
                    <p id="capitalismInitialStartMessage" class="capitalism-start-message"></p>
                    <p id="capitalismIdleTime" class="capitalism-start-message"></p>
                    <p id="capitalismIdleEarnings"  class="capitalism-start-message"></p>
