    <h1>Rotate device to play</h1>
</div>
{% endmacro %}

{% macro company(name, id, initialCost) %}
    <div id="{{ id }}UnpurchasedElement" class="capitalism-unbought-company-wrapper">
        <button id="{{ id }}InitialBuyButton" class="capitalism-company-buy-initial-button capitalism-not-buyable" type="button" name="button" data-company="{{ id }}">
            <span class="">Purchase your first {{ name }}</span>
            <span class="">Price: {{ initialCost }}</span>
        </button>
    </div>
    <div id="{{ id }}PurchasedElement" class="capitalism-company-wrapper capitalism-awaiting-purchase">
        <div class="capitalism-company-left">
            <div class="capitalism-company-run">
                <button id="{{ id }}RunButton" class="capitalism-company-run-button {{ id }}-run-button" type="button" name="button">
                    <span id="{{ id }}Owned" class="capitalism-company-owned">0</span>
                </button>
            </div>
        </div>
        <div class="capitalism-company-right">
            <div class="capitalism-company-earnings">
                <div class="capitalism-lupt"></div>
                <div class="capitalism-llpt"></div>
                <canvas class="capitalism-progress-canvas" id="{{ id }}ProgressCanvas" width="300" height="100"></canvas>
                <span id="{{ id }}EarningsElement" class="capitalism-company-earnings-amount"></span>
                <div class="capitalism-rupt"></div>
                <div class="capitalism-rlpt"></div>
            </div>
            <div class="capitalism-company-options">
                <div class="capitalism-company-buy-button-wrapper">
                    <button id="{{ id }}BuyButton" class="capitalism-company-buy-button"  type="button" name="button" data-company="{{ id }}">
                        <span class="capitalism-buy-button-left-top">Buy</span>
                        <span id="{{ id }}IncrementElement" class="capitalism-buy-button-left-bottom capitalism-buy-increment">x 1</span>
                        <span id="{{ id }}CostValue" class="capitalism-buy-button-right-top">50</span>
                        <span id="{{ id }}CostName" class="capitalism-buy-button-right-bottom">million</span>
                    </button>
                </div>
                <div class="capitalism-company-timer-wrapper">
                    <div class="capitalism-timer-time">
                        <span id="{{ id }}Timer">0:00</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endmacro %}

{% macro managers(items) %}
<div id="managerMenu" class="capitalism-menu capitalism-manager-menu">
    <button class="capitalism-close-menu-button" type="button" name="button" data-menu="managerMenu">X</button>
    <h1 class="capitalism-menu-heading">Managers</h1>
    <div class="capitalism-manager-menu-managers-wrapper">
        <div class="capitalism-manager-menu-managers">
            {% for item in items %}
                <div id="{{ item.id }}ManagerWrapper" class="capitalism-manager-buy-wrapper">
                    <div class="capitalism-manager-avatar"></div>
                    <div class="capitalism-manager-description">
                        <h2 class="capitalism-manager-name">{{ item.name }}</h2>
                        <p class="capitalism-manager-manager-of">Runs {{ item.runs }}</p>
                        <p class="capitalism-manager-cost">Â£{{ item.price }}</p>
                    </div>
                    <div class="capitalism-menu-upgrade">
                        <button id="{{ item.id }}Manager" class="capitalism-menu-upgrade-button capitalism-buy-manager-button capitalism-unavailable-option" type="button" name="button" data-cost="{{ item.price }}" data-company="{{ item.id }}">Employ</button>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endmacro %}

