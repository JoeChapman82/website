    <button class="capitalism-close-menu-button" type="button" name="button" data-menu="upgradesMenu">X</button>
    <h1 class="capitalism-menu-heading">Upgrades</h1>
    <div class="capitalism-manager-menu-managers-wrapper">
        <div class="capitalism-manager-menu-managers">
            {% for i in range(0, 10) %}
                <div id="upgradeWrapper{{ i }}" class="capitalism-manager-buy-wrapper" data-image="upgrade{{ i }}Image" data-name="upgrade{{ i }}Name" data-description="upgrade{{ i }}Description" data-cost="upgrade{{ i }}Cost" data-button="upgrade{{ i }}Button">
                    <div class="capitalism-upgrade-image-wrapper">
                        <img id="upgrade{{ i }}Image" class="capitalism-upgrade-image" src="/images/games/arcade/capitalism/lemon.jpg" alt="">
                    </div>
                    <div class="capitalism-manager-description">
                        <h2 id="upgrade{{ i }}Name" class="capitalism-manager-name">name here</h2>
                        <p id="upgrade{{ i }}Description"  class="capitalism-manager-manager-of">description</p>
                        <p id="upgrade{{ i }}Cost"  class="capitalism-manager-cost">cost here</p>
                    </div>
                    <div class="capitalism-menu-upgrade">
                        <button id="upgrade{{ i }}Button" class="capitalism-menu-upgrade-button capitalism-buy-upgrade-button capitalism-unavailable-option" type="button" name="button" data-cost="" data-company="" data-index="{{ i }}">Buy!</button>
                    </div>
                </div>
            {% endfor %}
