{% macro indexNavRow(links) %}
<div class="games-index-flex-wrapper">
    {% for item in links %}
        <a class="games-index-link" href="{{ item.href }}">
        <div class="games-index-link-image" {% if item.img %}style="background-image: url({{ item.img }})"{% endif %}>

        </div>
        <div class="games-index-link-title">
            <p>{{ item.title }}</p>
        </div>
    </a>
    {% endfor %}
</div>
{% endmacro %}

