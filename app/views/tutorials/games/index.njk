{% extends 'nunjucks/templates/base.njk' %}

{% import 'nunjucks/macros/tutorials/typography.njk' as typography %}
{% import "nunjucks/macros/tutorials/navigation.njk" as navigation %}

{% block title %}Tutorials - games - home{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="/css/tutorials.css">
{% endblock %}

{% block header %}
    {% include 'nunjucks/partials/topnav.njk' %}
{% endblock %}

{% block main %}
<div class="tutorials-main-index-wrapper">
    {{ typography.mainHeading('Games Tutorials')}}
    <h2 class="subindex-heading">Tips and tricks</h2>
    {{ navigation.indexNavRow([
        {href: '/tutorials/games/display-fps-counter', title: 'Display FPS', img: '/images/tutorials/games/fps.png'},
        {href: '/tutorials/games/keeping-score', title: 'Score effect', img: '/images/tutorials/games/keeping-score.png'},
        {href: '/tutorials/games/game-timer', title: 'Game timer', img: '/images/tutorials/games/game-timer.png'}
    ], 'small') }}
    {{ typography.rule() }}
    <h2 class="subindex-heading">Full games</h2>
    {{ navigation.indexNavRow([
        {href: '/tutorials/games/make-pong', title: 'Make a Pong game', img: '/images/tutorials/games/pong.png'}
    ], 'small') }}
</div>
{% endblock %}

{% block footer %}
{% include "nunjucks/partials/footer.njk" %}
{% endblock %}

{% block scripts %}
{% endblock %}
