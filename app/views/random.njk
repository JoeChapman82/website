{% extends 'nunjucks/templates/base.njk' %}

{% block title %}Random{% endblock %}
{# {% block body_class %}dark-bg{% endblock %} #}

{% block body %}
    <div class="dark-bg">
        <div class="full-screen-canvas-wrapper">
            {% for i in range(0, canvasAmount) %}
            <canvas id="canvas{{ loop.index }}" class="layered-full-screen-canvas" width="300" height="300"></canvas>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block scripts %}
    <script type="text/javascript" src="/scripts/canvas/{{ canvasName }}.js"></script>
{% endblock %}
