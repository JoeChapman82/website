{% extends 'nunjucks/templates/base.njk' %}
{% import "nunjucks/macros/typography.njk" as typography %}

{% block title %}{{ content.pageTitle }}{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="/css/about.css">
{% endblock %}

{% block header %}
    {% include 'nunjucks/partials/topnav.njk' %}
{% endblock %}

{% block main %}
<div id="mainWrapper" class="about-main-wrapper about-dark">
    <div class="about-options-wrapper-small">
        <div class="about-toggle-wrapper">
            <span class="toggle-info">Theme</span>
            <label class="switch">
                <input id="aboutToggle" name="aboutToggle" type="checkbox" value="dark" checked>
                <span class="slider"></span>
            </label>
        </div>
    </div>
    {{ typography.heading('1', content.heading1, false, 'main-heading')}}
    {{ typography.rule() }}
    <div class="about-section-wrapper">
        <div class="about-left-section">
            <div class="about-image-wrapper">
                <img src="/images/about/invader.png" alt="The Joesplayhouse Logo - A Space Invader">
            </div>
        </div>
        <div class="about-right-section">
            {{ typography.splitHeading('2', content.splitHeading1.content, 'about-space-below', content.splitHeading1.span, 'about-highlighted-text') }}
            {{ typography.parapgraph(content.p1) }}
            {{ typography.parapgraph(content.p2) }}
            {{ typography.parapgraph(content.p3) }}
            {{ typography.linkedParagraph(content.splitP1.content, false, content.splitP1.linkContent, 'about-text-link', '/random', content.splitP1.content2)}}
            {{ typography.parapgraph(content.p4) }}
            {{ typography.parapgraph(content.p5) }}
            {{ typography.splitParagraph(content.splitP2.content, false, content.splitP2.span, 'about-highlighted-text', content.splitP2.content2)}}
        </div>
    </div>
</div>
{% endblock %}

{% block footer %}
{% include "nunjucks/partials/footer.njk" %}
{% endblock %}

{% block scripts %}
<script type="text/javascript" src="/scripts/about/main.js"></script>
{% endblock %}
